#include "hardware_layer.h"
#include "main.h"
void set_color_light1(int color){
	switch (color){
	case 0://khong mau
		HAL_GPIO_WritePin(Light1_1_GPIO_Port, Light1_1_Pin, SET);
		HAL_GPIO_WritePin(Light1_2_GPIO_Port, Light1_2_Pin, SET);
		break;
	case 1://mau do
		break;
	case 2://mau xanh
		break;
	case 3://mau vang
		break;
	default:
		break;
	}
}

