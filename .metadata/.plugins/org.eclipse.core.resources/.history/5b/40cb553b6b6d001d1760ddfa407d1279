/**
  * @brief  The application entry point.
  * @retval int
  */
void *toggle(){
	HAL_GPIO_TogglePin(Light1_1_GPIO_Port, Light1_1_Pin);
}
int main(void)
{
  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
